extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Language:
      input#name.form-control(type='text', placeholder='English, Spanish etc.' name='name' value=(undefined===language ? '' : language.name), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg