extends layout

block content

  h1 #{title}: #{language.name}
  
  p #[strong Name:] #{language.name}

  hr
  
  if language_edition.length
  
    p #[strong Delete the following copies before attempting to delete this language.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Editions
      dl
        each edition in language_edition
          p #[strong Name:] 
            a(href=edition.url) #{edition._id}

  else
    p Do you really want to delete this Language?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=language._id )

      button.btn.btn-primary(type='submit') Delete